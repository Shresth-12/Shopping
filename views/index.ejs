    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Slider styles */
        .slider {
            width: 90%;
            overflow: hidden;
            margin-top: 20px;
            /* Adjust spacing as needed */
            margin-bottom: 20px;
            /* Add bottom margin */
            position: relative;
            left: 5%;
        }

        .slide-container {
            display: flex;
            gap: 15px;
            /* Gap between slides */
            transition: transform 0.5s ease-in-out;
            /* overflow-x: auto; Enable horizontal scrolling */
            scroll-snap-type: x mandatory;
            -webkit-overflow-scrolling: touch;
            /* Smooth scrolling on iOS */
        }

        .slide {
            flex: 0 0 calc(25% - 15px);
            /* 25% width for each slide minus the gap */
            scroll-snap-align: start;
            /* Snap behavior */
            position: relative;
            margin-right: 15px;
            /* Right margin to create gap */
            overflow: hidden;
            /* Hide overflow for zoom effect */
            transition: transform 0.3s ease;
            /* Smooth transition for zoom effect */
        }

        .slide img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 0.3s ease;
            /* Smooth transition for zoom effect */
        }

        .slide:hover img {
            transform: scale(1.1);
            /* Zoom in effect on hover */
        }

        .overlay {
            position: absolute;
            bottom: 60px;
            left: 10px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .banner {
            display: flex;
            position: relative;
            justify-content: center;
            /* Center the banner images */
            gap: 30px;
            /* Gap between the banner images */
            margin-bottom: 30px;
            /* Bottom margin */
        }

        .banner img {
            height: 400px;
            width: auto;
            margin-top: 30px;
            position: relative;
            transition: transform 0.3s ease;
        }

        .banner img:hover {
            transform: scale(1.1);
        }

        .overlay-banner1 {
            position: absolute;
            top: 40%;
            left: 10%;
            color: white;
            /* background-color: rgba(0, 0, 0, 0.5); */
            background-color: #000;
            padding: 5px 10px;
            font-size: 28px;
            font-weight: bold;
            width:250px;
        }
        

        .overlay-banner2 {
            position: absolute;
            top: -150px;
            left: 10%;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px 10px;
            font-size: 18px;
            font-weight: bold;
            position: relative;
            left: 100px;
        }

        .products-section {
            width: 90%;
            margin: 0 auto;
            padding: 40px 0;
            background-color: #fff;
        }

        .products-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .products-header h2 {
            font-size: 28px;
            font-weight: bold;
        }

        .products-header p {
            font-size: 16px;
            color: #666;
        }

        .products-menu {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-bottom: 40px;
        }

        .products-menu button {
            font-size: 18px;
            text-decoration: none;
            color: #000000;
            padding: 10px 20px;
            transition: color 0.3s;
            text-decoration: none;
        }

        .products-menu button:hover,
        .products-menu button.active {
            color: #04d39f;
        }

        .products-grid {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            width: 23%;
            background-color: #fff;
            transition: transform 0.3s;
            position: relative;
        }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-image {
            width: 100%;
            height: auto;
        }

        .product-info {
            padding: 20px;
        }

        .product-info button {
            font-size: 15px;
            margin-bottom: 10px;
            background-color: transparent;
            border: 2px solid transparent;
            color: black;
        }
        .product-info button:hover{
            color: #04d39f;
        }

        .product-info p {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-rating {
            font-size: 16px;
            color: #f5a623;
        }

        .product-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #f8f8f8;
            border-top: 1px solid #ddd;
            margin-bottom: 0px;
        }

        .product-actions img {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        .add-to-cart {
            background-color: #04d39f;
            color: #fff;
            padding: 10px 20px;
            border-radius: 20px;
            text-decoration: none;
            transition: background-color 0.3s;
            border:2px solid transparent;
        }

        .add-to-cart:hover {
            background-color: #02a37a;
        }

        .badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #04d39f;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 12px;
        }

        .store {
            display: flex;
            position: relative;
            justify-content: center;
            /* Center the banner images */
            gap: 30px;
            /* Gap between the banner images */
            margin-bottom: 30px;
            /* Bottom margin */
        }

        .store img {
            height: 400px;
            width: auto;
            margin-top: 30px;
            position: relative;
            transition: transform 0.3s ease;
        }

        .storeinfo {
            margin-top: 60px;
            margin-left: 600px;
        }

        .storeinfo h1 {
            font-size: 50px;
        }

        .storeinfo h4 {
            font-size: 20px;
            margin-top: -10px;
            margin-left: 35px;
            margin-bottom: 20px;
        }

        .storeinfo a {
            color: #02a37a;
        }

        

