.slide-button {
    background-color: #04d39f; /* Green background */
    color: white; /* White text color */
    border: none; /* No border */
    padding: 10px 20px; /* Padding inside the button */
    text-align: center; /* Center text */
    text-decoration: none; /* Remove underline from anchor tags */
    display: none; /* Hide the button initially */
    position: absolute; /* Position absolute over the image */
    bottom: 20px; /* Position bottom of the image */
    right: 20px; /* Position right of the image */
    font-size: 16px; /* Font size */
    cursor: pointer; /* Cursor style on hover */
    border-radius: 5px; /* Rounded corners */
    transition: opacity 0.3s ease; /* Smooth transition for opacity change */
}

/* Show the button on hover */
.slide:hover .slide-button {
    display: inline-block; /* Display the button on hover */
    opacity: 1; /* Set opacity to 1 for full visibility */
}

/* Optional: Adjust margin or padding around the button */
.slide-button {
    margin-top: 10px; /* Margin top for spacing */
}
.wishlist{
    background-color: transparent;
    border: 2px solid transparent;
}
.wish-cart{
    display: flex;
}

.confirmation-message {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #04d39f;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    opacity: 0;
    transition: opacity 0.3s, top 0.3s;
    z-index: 1000;
}

.confirmation-message.show {
    top: 40px;
    opacity: 1;
}
.product-info a{
    color: #000;
}
.product-info a:hover{
    color: #04d39f;
}

.fa-star {
    font-size: 20px; /* Adjust as needed */
    color: #ccc; /* Color for empty stars */
}

.fa-star.checked {
    color: #ffcc00; /* Color for filled stars */
}

.topinteresting{
    background-color: transparent;
    border: 2px solid transparent;
}


